<databaseChangeLog
    xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-3.1.xsd"
    logicalFilePath="01-users.xml">

  <changeSet id="create-table-matchs" author="mjeanroy" context="schema, test">
    <createTable tableName="matchs">
      <column name="id" type="BINARY(16)">
        <constraints primaryKey="true" nullable="false"/>
      </column>
      <column name="version" type="int" defaultValueNumeric="0">
        <constraints nullable="false"/>
      </column>
      <column name="creation_date" type="DATETIME">
        <constraints nullable="false"/>
      </column>
      <column name="date" type="DATETIME">
        <constraints nullable="false"/>
      </column>
      <column name="team1_id" type="BINARY(16)">
        <constraints nullable="false"/>
      </column>
      <column name="team2_id" type="BINARY(16)">
        <constraints nullable="false"/>
      </column>
      <column name="score1" type="INT" />
      <column name="score2" type="INT" />
    </createTable>
    <modifySql dbms="mysql">
      <append value="engine innodb"/>
    </modifySql>
  </changeSet>

</databaseChangeLog>
