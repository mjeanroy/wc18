<databaseChangeLog
    xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-3.1.xsd"
    logicalFilePath="01-users.xml">

  <changeSet id="create-table-bets" author="mjeanroy" context="schema, test">
    <createTable tableName="bets">
      <column name="id" type="varchar(36)">
        <constraints primaryKey="true" nullable="false"/>
      </column>
      <column name="version" type="int" defaultValueNumeric="0">
        <constraints nullable="false"/>
      </column>
      <column name="creation_date" type="DATETIME">
        <constraints nullable="false"/>
      </column>
      <column name="date" type="DATETIME">
        <constraints nullable="false"/>
      </column>
      <column name="match_id" type="VARCHAR(36)">
        <constraints nullable="false" foreignKeyName="matches_match_id" references="matches(id)"/>
      </column>
      <column name="user_id" type="varchar(36)">
        <constraints nullable="false" foreignKeyName="users_user_id" references="users(id)" />
      </column>
      <column name="score1" type="INT">
        <constraints nullable="false"/>
      </column>
      <column name="score2" type="INT">
        <constraints nullable="false"/>
      </column>
    </createTable>
    <modifySql dbms="mysql">
      <append value="engine innodb"/>
    </modifySql>
  </changeSet>

</databaseChangeLog>
